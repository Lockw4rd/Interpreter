#include "math.h"
#define MAX 100

int soma(int a, int b) {
    return a + b;
}

int fatorial(int n) {
    if (n <= 1) return 1;
    return n * fatorial(n - 1);
}

void mensagem() {
    printf("Funções estão funcionando!\n");
}

int main() {
    int resultado = soma(5, 10);
    mensagem();
    printf("Soma: %d\n", resultado);
    printf("Fatorial de 4: %d\n", fatorial(4));
    return 0;
}
